from conexio.conexio import conexion

async def crear_usuario(datos: dict):
    conn = await conexion()
    try:
        query = """
            INSERT INTO usuarios (
                nombre, 
                apellido, 
                email, 
                descripcion, 
                curso, 
                anio, 
                direccion, 
                cp, 
                password
            )
        """
        await conn.execute(
            query,
            datos['nombre'],
            datos['apellido'],
            datos['email'],
            datos['descripcion'],
            datos['curso'],
            datos['ano'],
            datos['direccion'],
            datos['cp'],
            datos['password']
        )
        return {"mensjae": "Hecho con exito"}
    finally:
        await conn.close()
        
        
async def leer_usuario(email: str):
    conn = await conexion()
    try:
        query = """
            SELECT 
                id,
                nombre, 
                apellido, 
                email, 
                curso, 
                ano AS a√±o, 
                direccion
            FROM usuarios
            WHERE email = $1
        """
        return await conn.fetchrow(query, email)
    finally:
        await conn.close()

            
async def actualizar_usuario(email: str, datos: dict):
    conn = await conexion()
    try:
        campos = []
        valores = []
        contador = 1
        
        for campo, valor in datos.items():
            if valor is not None:
                campos.append(f"{campo} = ${contador}")
                valores.append(valor)
                contador += 1
        
        if not campos:
            return {"mensaje": "Todo perfecto"}
        
        #Aqui deberian ir mas cosas pero no recuerdo
        
    finally:
        await conn.close()
        
        
